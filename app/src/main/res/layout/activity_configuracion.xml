<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".ConfiguracionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorAzulFuerte"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/escudo_ssp_durango" />

        <!--<ImageView
            android:id="@+id/imgSenal"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="90dp" />-->

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:text="CONFIGURACIÓN"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo_cc" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="start"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="Enviar alerta al presionar el botón de encendido"
        android:textColor="@color/colorAzulFuerte"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="Presione la tecla de encendido rápidamente 3 veces para alertas a las autoridades cuando necesite ayuda urgente."
        android:textAlignment="textStart"
        android:textColor="#404141"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:text="Se enviaran fotografías de la camára frontal y camára trasera, se grabará audio y se tomarán las coordenadas de la ubicación actual. "
        android:textAlignment="textStart"
        android:textColor="#404141"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Switch
            android:id="@+id/switchServicioActivo"
            style="@style/SwitchCompatStyle"
            android:layout_width="140dip"
            android:layout_height="20dip"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:maxHeight="10dp"
            android:minWidth="100dp"
            android:shadowColor="@color/colorVerde"
            android:switchMinWidth="56dp"
            android:text=" Estatus:"
            android:textColor="#404141"
            android:textSize="16sp"
            android:thumbTextPadding="25dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:text="Número de veces que se desean tomar las fotografías (Hasta 3 ciclos)."
            android:textColor="#404141"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtNoCiclo"
                android:layout_width="61dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="#DDE0E0"
                android:inputType="number"
                android:text="1"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/iBtnGuardarCiclo"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:background="@color/colorVerdeGob"
                app:srcCompat="@drawable/ic_save" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>